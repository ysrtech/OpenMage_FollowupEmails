<?xml version="1.0"?>
<config>
    <sections>
        <followup translate="label" module="followup">
            <label>Email Followups</label>
            <tab>customer</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <config translate="label">
                    <label>Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <active>
                            <label>Enable Follow-up Emails</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Turn the module on or off without disabling it at the module level.</comment>
                        </active>
                        <abandoned_cart_hours>
                            <label>Abandoned Cart Threshold (Hours)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Consider cart abandoned after this many hours of inactivity (default: 1 hour)</comment>
                            <validate>validate-number validate-greater-than-zero</validate>
                        </abandoned_cart_hours>
                        <intercept_emails>
                            <label>Intercept Autoresponder Emails</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Enable to redirect all autoresponder emails to a specific email address (for testing purposes)</comment>
                        </intercept_emails>
                        <intercept_email_address>
                            <label>Interception Email Address</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>All autoresponder emails will be sent to this address when interception is enabled</comment>
                            <validate>validate-email</validate>
                            <depends>
                                <intercept_emails>1</intercept_emails>
                            </depends>
                        </intercept_email_address>
                        <enable_tracking>
                            <label>Enable Email Tracking</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Track email opens and clicks (uses tracking pixel and link wrapping)</comment>
                        </enable_tracking>
                        <log_retention_days>
                            <label>Email Log Retention (Days)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Delete sent email logs older than this many days (default: 60)</comment>
                            <validate>validate-number validate-greater-than-zero</validate>
                        </log_retention_days>
                    </fields>
                </config>
            </groups>
        </followup>
    </sections>
</config>