<?xml version="1.0"?>
<package>
    <name>YSRTech_Followup</name>
    <version>2.9.0.0</version>
    <stability>stable</stability>
    <license uri="http://creativecommons.org/licenses/by-nc/4.0/">Creative Commons - Attribution-NonCommercial 4.0 International</license>
    <channel>community</channel>
    <extends/>
    <summary>Follow-up email automation for Magento/OpenMage.</summary>
    <description>Event-based autoresponders with abandoned cart recovery, tracking, and multi-step chains.</description>
    <notes>Refactored release under the YSRTech namespace.</notes>
    <authors>
        <author>
            <name>YSRTech</name>
            <user>ysrtech</user>
            <email>support@example.com</email>
        </author>
    </authors>
    <date>2025-12-16</date>
    <time>00:00:00</time>
    <contents>
        <target name="magecommunity">
            <dir name="YSRTech">
                <dir name="Followup"/>
            </dir>
        </target>
        <target name="magedesign">
            <dir name="frontend">
                <dir name="base">
                    <dir name="default">
                        <dir name="layout"><file name="followup.xml"/></dir>
                        <dir name="template"><dir name="followup"/></dir>
                    </dir>
                </dir>
            </dir>
            <dir name="adminhtml">
                <dir name="default">
                    <dir name="default">
                        <dir name="layout"><file name="followup.xml"/></dir>
                        <dir name="template"><dir name="followup"/></dir>
                    </dir>
                </dir>
            </dir>
        </target>
        <target name="mageetc">
            <dir name="modules"><file name="YSRTech_Followup.xml"/></dir>
        </target>
    </contents>
    <compatible/>
    <dependencies>
        <required>
            <php><min>5.2.0</min><max>7.4.0</max></php>
            <extension><name>soap</name><min/><max/></extension>
        </required>
    </dependencies>
</package>
